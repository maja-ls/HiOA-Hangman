<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".StartAktivitet"
    android:background="@color/main_back">

    <LinearLayout
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/land_layout_radius"
        android:orientation="horizontal"
        android:clickable="false">



        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/newgame"
            android:text="@string/button_new_game"
            android:padding="@dimen/main_menu_button_padding"
            android:onClick="button_newgame"
            android:background="@drawable/roundedbutton"
            android:layout_margin="@dimen/main_menu_button_margin"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/rules"
            android:text="@string/button_rules"
            android:padding="@dimen/main_menu_button_padding"
            android:onClick="button_rules"
            android:background="@drawable/roundedbutton"
            android:layout_margin="@dimen/main_menu_button_margin"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/exit"
            android:text="@string/button_exit"
            android:padding="@dimen/main_menu_button_padding"
            android:onClick="button_exit"
            android:background="@drawable/roundedbutton"
            android:layout_margin="@dimen/main_menu_button_margin"
            />

    </LinearLayout>
    <LinearLayout
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/land_layout_radius"
        android:orientation="horizontal"
        android:clickable="false">



        <Button
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:id="@+id/norsk"
            android:layout_margin="@dimen/main_menu_button_margin"

            android:onClick="button_norsk"
            android:background="@drawable/norflag"

            />

        <Button
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:id="@+id/english"
            android:layout_margin="@dimen/main_menu_button_margin"

            android:onClick="button_english"
            android:background="@drawable/usflag"

            />


    </LinearLayout>
</LinearLayout>
